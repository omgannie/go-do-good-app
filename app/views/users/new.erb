<% if @errors %>
  <% @errors.each do |error| %>
  <div class="error"><%= error %></div>
  <% end %>
<% end %>

<h1>Create An Account</h1>

<form action="/users" method="post">
  <label>First Name</label>
  <input type="text" name="user[first_name]" placeholder="e.g. 'Jane'">

  <label>Last Name</label>
  <input type="text" name="user[last_name]" placeholder="e.g. 'Doe'">

  <label>Email</label>
  <input type="text" name="user[email]" placeholder="e.g. 'janedoe@janedoe.com'">

  <label>Username</label>
  <input type="text" name="user[username]" placeholder="e.g. 'janedoe123'">

  <label>Password</label>
  <input type="password" name="user[password]" placeholder="•••••••••">

  <input type="submit" value="Create My Account">
</form>
